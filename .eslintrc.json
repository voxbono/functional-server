{
  "extends": [
    "plugin:node/recommended",
    "./node_modules/sanctuary-style/eslint-es6.json"
  ],
  "env": {
    "node": true,
    "browser": true
  },
  "rules": {
    "strict": "off",
    "func-style": "off",
    "max-len": [
      "error",
      {
        "code": 100
      }
    ],
    "no-tabs": [
      "error",
      {
        "allowIndentationTabs": true
      }
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "comma-dangle": "off",
    "no-plusplus": "off"
  }
}